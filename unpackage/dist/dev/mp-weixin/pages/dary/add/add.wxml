<view class="content-bg"><view class="dary-date flex-row from"><view class="day">{{from.darydate.day}}</view><view class="up-down flex-column"><view class="week">{{from.darydate.year+"年"}}</view><view class="year-month">{{''+from.darydate.month+'月'}}</view></view></view><view class="dary-title"><input auto-height="{{true}}" placeholder="标题!不能超过20个字哦~" maxlength="20" data-event-opts="{{[['input',[['__set_model',['$0','title','$event',[]],['from']]]]]}}" value="{{from.title}}" bindinput="__e"/></view><view class="dary-text"><textarea style="width:100%;" placeholder="记录今日日记鸭!" maxlength="200" data-event-opts="{{[['input',[['__set_model',['$0','content','$event',[]],['from']]]]]}}" value="{{from.content}}" bindinput="__e"></textarea></view><view class="locationMessage"><text style="color:royalblue;">{{from.locations}}</text></view><view class="add-image flex-row"><block wx:for="{{from.imaging}}" wx:for-item="item" wx:for-index="i" wx:key="i"><view data-event-opts="{{[['longpress',[['removeImage',[i]]]]]}}" class="imge" bindlongpress="__e"><image src="{{item}}" data-event-opts="{{[['tap',[['previewImag',[i]]]]]}}" bindtap="__e"></image></view></block><image src="{{images}}" data-event-opts="{{[['tap',[['addImage',['$event']]]]]}}" bindtap="__e"></image></view><view class="columnLine"></view><view class="operation flex-row"><view data-event-opts="{{[['tap',[['addVideo',['$event']]]]]}}" class="icon-text flex-column" bindtap="__e"><image style="width:50rpx;height:50rpx;" src="/static/video.png"></image><text>添加视频</text></view><view data-event-opts="{{[['tap',[['addAudio',['$event']]]]]}}" class="icon-text flex-column" bindtap="__e"><image style="width:50rpx;height:50rpx;" src="/static/audio.png"></image><text>添加音频</text></view><view data-event-opts="{{[['tap',[['getLocations',['$event']]]]]}}" class="icon-text flex-column" bindtap="__e"><image style="width:50rpx;height:50rpx;" src="/static/location.png"></image><text>添加定位</text></view></view><view class="columnLine"></view><view class="operation-result flex-column"><block wx:if="{{from.video}}"><video style="width:100%;height:300rpx;padding:10rpx;" src="{{from.video}}"></video></block><block wx:if="{{from.audio}}"><audio style="margin:10rpx;" src="{{from.audio}}" controls="{{true}}" name="{{from.audioName}}" poster="{{audio_bg}}"></audio></block></view></view>