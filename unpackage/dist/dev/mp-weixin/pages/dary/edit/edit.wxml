<view class="content-bg"><block wx:if="{{darydate}}"><view class="dary-date flex-row from"><view class="day">{{darydate.day}}</view><view class="up-down flex-column"><view class="week">{{darydate.month+"月"}}</view><view class="year-month">{{darydate.year+"年"}}</view></view></view></block><view class="dary-title"><input type="text" auto-height="{{true}}" placeholder="今日标题!" data-event-opts="{{[['input',[['__set_model',['','title','$event',[]]]]]]}}" value="{{title}}" bindinput="__e"/></view><view class="dary-text"><textarea type="text" auto-height="{{true}}" placeholder="记录今日的日记鸭!" data-event-opts="{{[['input',[['__set_model',['','content','$event',[]]]]]]}}" value="{{content}}" bindinput="__e"></textarea></view><view class="locationMessage"><block wx:if="{{locations}}"><text style="font-size:35rpx;color:blue;">@</text></block><text style="color:royalblue;">{{locations}}</text></view><block wx:for="{{imaging}}" wx:for-item="item" wx:for-index="i" wx:key="i"><view class="images"><image style="margin:10rpx;border:3rpx solid #ccc;width:100%;" src="{{item}}"></image></view></block><block wx:if="{{video}}"><view class="videos"><video style="width:100%;height:300rpx;" src="{{video}}"></video></view></block><block wx:if="{{audio}}"><view class="audios"><audio style="width:100%;" src="{{audio}}" controls="{{true}}" name="{{audioName}}" poster="{{audio_bg}}"></audio></view></block></view>