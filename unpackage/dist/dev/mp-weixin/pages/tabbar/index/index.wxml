<view class="body-content"><view class="user-title"><view class="user-image"><image src="{{userImage?userImage:defaulImage}}" data-event-opts="{{[['tap',[['changeImage',['$event']]]]]}}" bindtap="__e"></image></view><block wx:if="{{!userId}}"><view data-event-opts="{{[['tap',[['gotoLoginOrRegister',['$event']]]]]}}" class="nologinDisplay" bindtap="__e"><view class="nologin">请前去登录或注册 ></view></view></block><block wx:if="{{user}}"><view class="user-message"><view class="nickname">{{user.nickname}}</view><view class="sign"><text>{{''+user.sign+''}}</text></view></view></block></view><scroll-view class="scrolly" scroll-y="{{true}}"><block wx:for="{{daryList}}" wx:for-item="item" wx:for-index="i" wx:key="i"><view class="dary-list"><view data-event-opts="{{[['tap',[['daryDtail',['$0'],[[['daryList','',i,'_id']]]]]]]}}" class="dary-item" bindtap="__e"><block wx:if="{{item.imaging}}"><view class="dary-image"><image src="{{item.imaging[0]?item.imaging[0]:images}}"></image></view></block><view class="item-right"><view class="dary-title"><view class="title">{{item.title}}</view><view class="dary-content"><text>{{''+item.content+''}}</text></view><block wx:if="{{item.darydate}}"><view class="dary-date">{{''+item.darydate.year+"-"+item.darydate.month+"-"+item.darydate.day+''}}</view></block></view></view></view><view class="operation flex-row"><view class="dary-operation"><view data-event-opts="{{[['tap',[['goodLike',['$0','$1'],[[['daryList','',i,'_id']],[['daryList','',i,'goodState']]]]]]]}}" class="operation-item" bindtap="__e"><view class="icon"><image src="{{item.goodState?good_select:good_image}}"></image></view><view class="text">点赞</view></view></view></view></view></block></scroll-view><view data-event-opts="{{[['tap',[['add',['$event']]]]]}}" class="btn" bindtap="__e"><image src="/static/add.png"></image></view></view>